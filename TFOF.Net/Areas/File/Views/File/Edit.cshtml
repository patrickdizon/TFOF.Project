@using System.Linq
@using TFOF.Areas.File.Models
@model TFOF.Areas.File.Models.FileModel
@{
    Layout = ViewBag.Layout != null ? ViewBag.Layout : "~/Views/Shared/_EditLayout.cshtml";
}


<div class="form-horizontal padding-bottom-100">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            @Html.Display("Form", "FormEdit")
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
   
            <div class="mod-header padding-top-25">
                Logs
            </div>
            <table class="table az-table framed condensed">
                <thead>
                    <tr>
                        <th width="1">#</th>
                        <th>Date</th>
                        <th>Activity</th>
                        <th>User</th>
                    </tr>
                </thead>
                @if (Model.FileLogs.OrderByDescending(c => c.Created).Take(50).Count() > 0)
                {
                    int i = 0;
                    foreach (var log in Model.FileLogs.OrderByDescending(c => c.Created).Take(50))
                    {
                        i++;
                        <tr>
                            <td>@(i)</td>
                            <td>@(log.Created)</td>
                            <td nowrap>
                                @(log.Activity)
                            </td>
                            <td>@(log.CreatedBy.FullName)</td>
                        </tr>
                    }
                }

            </table>
        </div>
    </div>
</div>

