
@{
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

<div ng-controller="BasicController" ng-cloak>
   @Html.Display("SearchForm", "FormSearch")

    <div class="table-wrapper">
    <table class="table table-hover az-table condensed" ng-show="filters.didSearch">
        <thead>
            <tr>
                <th>
                    No.
                </th>
               <th>
					 Name
				</th>
				<th>
					 Path
				</th>

            </tr>
        </thead>
        <tr ng-repeat="a in basics track by $index" class="ng-cloak" ng-show="basics.length > 0" ng-class="{ selected:  selectedItem == $index  }" ng-click="selectRow($index);" ng-dblclick="redirect('@Url.Action("Edit","FileDirectory")/' + a.Id);">
            <td nowrap>
                <span ng-bind="$index + filters.viewOffset + 1"></span><a name="{{ $index }}"></a>
            </td>
            <td>
                <a href="@Url.Action("Edit","FileDirectory")/{{ a.Id }}">{{ a.Name }}</a>
			</td>
			<td>
				{{ a.Path }}
			</td>

        </tr>
    </table>
    </div>
</div>
