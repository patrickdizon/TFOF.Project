
@{
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

<div ng-controller="BasicController" ng-cloak>
   @Html.Display("SearchForm", "FormSearch")

    <div class="table-wrapper">
    <table class="table table-hover az-table condensed" ng-show="filters.didSearch">
        <thead>
            <tr>
                <th>
                    No.
                </th>
                <th>
                    Id.
                </th>
				<th>
					 Date
				</th>
                <th>
                    Month
                </th>
                <th>
                    Day
                </th>
				<th>
					 Name
				</th>
                <th>
                    Is Holiday
                </th>
                <th>
					 Is Closed For Business
				</th>
				<th>
					 Notes
				</th>

            </tr>
        </thead>
        <tr ng-repeat="a in basics track by $index" class="ng-cloak" ng-show="basics.length > 0" ng-class="{ selected:  selectedItem == $index  }" ng-click="selectRow($index);" ng-dblclick="redirect('@Url.Action("Edit","Calendar")/' + a.Id);">
            <td nowrap>
                <span ng-bind="$index + filters.viewOffset + 1"></span><a name="{{ $index }}"></a>
            </td>
            <td>
                <a href="@Url.Action("Edit","Calendar")/{{ a.Id }}">{{ a.Id }}</a> 
            </td>
			<td>
				{{ a.Date | date : 'yyyy-MM-dd' }}
			</td>

          
            <td>
                {{ a.Date | date : 'MMMM' }}
            </td>
            <td>
                {{ a.Date | date : 'EEEE' }}
            </td>
			<td>
				{{ a.Name }}
			</td>
			<td ng-bind-html="a.IsHoliday | check ">
			</td>
            <td ng-bind-html="a.IsClosedForBusiness | check "></td>
			<td>
				{{ a.Notes }}
			</td>

        </tr>
    </table>
    </div>
</div>
