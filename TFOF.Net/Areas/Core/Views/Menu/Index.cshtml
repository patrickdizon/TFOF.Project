@{
    ViewBag.LinkNew = Url.Action("Create", "Menu");
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}
<div ng-controller="BasicController" ng-cloak>
    @Html.Display("SearchForm", "FormSearch")
    <div class="table-wrapper">
        <table class="table table-hover az-table condensed" ng-show="filters.didSearch">
            <thead>
                <tr>
                    <th>
                        No.
                    </th>
                    <th>
                        Label
                    </th>
                    <th>
                        Parent
                    </th>
                    <th>
                        Group
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Role
                    </th>
                    <th>
                        Area
                    </th>
                    <th>
                        Controller
                    </th>
                    <th>
                        Environment
                    </th>
                </tr>
            </thead>
            <tr ng-repeat="a in basics track by $index" class="ng-cloak" ng-show="basics.length > 0" ng-class="{ selected:  selectedItem == $index  }"  ng-click="selectRow($index);" ng-dblclick="redirect('@Url.Action("Edit", "Menu")/' + a.Id)">
                <td nowrap>
                    <span ng-bind="$index + filters.viewOffset + 1"></span><a name="{{ $index }}"></a>
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Menu")/{{a.Id}}">
                        {{a.Label }}
                        <span ng-hide="a.Label">---</span>
                    </a>
                </td> 
                <td>
                    {{ a.Parent.Label }}
                </td>
                <td>
                    {{ a.GroupNumber }}
                </td>
                <td>
                    {{a.Position }}
                </td>
                <td>
                    {{a.Role }}
                </td>
                <td>
                    {{a.Area }}
                </td>
                <td>
                    {{a.Controller }}
                </td>
                <td>
                    {{a.Environment }}
                </td>
               
            </tr>
        </table>
    </div>
</div>