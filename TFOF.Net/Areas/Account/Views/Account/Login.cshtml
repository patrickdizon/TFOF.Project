@using TFOF.Areas.Account.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    string returnUrl = (ViewBag.ReturnURL != null ? ViewBag.ReturnURL : Url.Action("Index", "Home", new { Area = "Home" }));
}
<section id="loginForm">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4 ">
        <img src="@Url.Content("~/Images/logo.png")" class="logo">
        <h4 class="header-title">@ViewBag.Title</h4>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = returnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "alert alert-danger" })
                <div class="row">
                    <div class="input-field large col-sm-12">
                        @Html.TextBoxFor(m => m.Email)
                        @Html.LabelFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="input-field large col-sm-12">
                        @Html.PasswordFor(m => m.Password)
                        @Html.LabelFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row padding-top-10">
                    <div class="padding-sides-40 col-sm-9">
                            <label class="checkbox font-normal">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                Remember Me
                            </label>
                    </div>
                    <div class="col-sm-3">
                        <div class="btn-group pull-right">
                            <input type="submit" value="Log in" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 padding-20 align-center">
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </div>
                    
                </div>
                @*<p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>*@
                //Enable this once you have account confirmation enabled for password reset functionality
                
            }
        </div>
    </div>
</section>

<script>
    $( document ).ready(function(){
        $('#Email').focus();
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}