@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_BreadcrumbsLayout.cshtml")
<div class="row condensed padding-sides-15 header-affix {{ sideNav }}" data-spy="affix" data-offset-top="55">
    <div class="col-sm-12">
        <h4 class="header-title">
            @if (!string.IsNullOrWhiteSpace(ViewBag.SuperTitle))
            {
                <span class="font-10">@(ViewBag.SuperTitle)</span><br />
            }
            @(ViewBag.Title)
            @if(!string.IsNullOrWhiteSpace(ViewBag.SubTitle))
            {
                <br /><span class="font-10">@(ViewBag.SubTitle)</span>
            }
        </h4>
    </div>
    @if (IsSectionDefined("menubar") || IsSectionDefined("menu"))
    {
        <div class="col-sm-12 padding-bottom-10">
            <div class="btn-toolbar">
        	    @RenderSection("menubar", required: false)
                @RenderSection("menu", required: false)
            </div>
        </div>
    }
</div>
<div class="padding-bottom-50">
    @RenderBody()
</div>
<div class="padding-50"></div>
@Html.Partial("~/Views/Shared/_DeleteModal.cshtml")
@section scripts {
    @RenderSection("scripts", required: false)
}